{
  "name": "agentinit",
  "version": "0.1.0",
  "description": "A CLI tool for managing and configuring AI coding agents",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "agentinit": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "pack": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npm run lint && npm test"
  },
  "keywords": [
    "ai",
    "agents",
    "cli",
    "configuration",
    "automation"
  ],
  "author": "AgentInit Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5",
    "ora": "^8.1.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.8.0",
    "@types/prompts": "^2.4.9",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.6.3"
  },
  "packageManager": "bun@1.1.0"
}
